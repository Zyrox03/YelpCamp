<% layout('layouts/Boilerplate')%>

  <div id="cluster-map" class="mb-3" ></div>

  <div class="container">

    <div>


      <h1 class="mb-3">Campgrounds</h1>
      <% for (camp of campground){%>

        <div class="card mb-4">
          <div class="row">
            <div class="col-md-4">

              <%if(camp.image.length) {%>
                <img class="img-fluid" alt="<%= camp.name %> image" src="<%=camp.image[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/duh30yscb/image/upload/v1677740145/YelpCampZyrox/ide0rp0anh6wn8l4zknd.jpg">
                <% } %>

            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title">
                  <%= camp.name %>
                </h5>
                <p class="card-text">
                  <%= camp.description %>
                </p>
                <p class="card-text">
                  <small class="text-muted">
                    <%= camp.location%>
                  </small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
              </div>
            </div>
          </div>
        </div>
        <% }%>


          <script>
            const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
            const campgrounds =  {features : <%- JSON.stringify(campground) %>}
          </script>

          <script src="/JS/clusterMap.js"></script>
    </div>
  </div>